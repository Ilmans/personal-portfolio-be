
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  username String @unique
  password String
  full_name String 
  email String @unique  
  articles Article[]

  @@map("users")

}

model Article {
  id Int @id @default(autoincrement())
  author User @relation(fields: [authorId],references: [id])
  authorId  Int
  category Category @relation(fields: [categoryId],references: [id])
  categoryId Int
  title String
  slug String @unique
  body String @db.LongText()
  published Boolean @default(false)
  views Int @default(0)
  createdAt DateTime @db.DateTime()
  updatedAt DateTime @updatedAt

 

  @@map("articles")

}

model Project {
  id Int @id @default(autoincrement())
  stacks Json @db.Json()
  name String
  slug String
  description String?
  image String
  url Json

  @@map("projects")

}





model Category {
  id Int @id @default(autoincrement())
  name String
  articles Article[]
  @@map("categories")

 
}